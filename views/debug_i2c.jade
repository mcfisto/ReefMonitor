extends layout

block content
  div.col-sm-10(id='content')
    div
      hr
      ul.breadcrumb
        li
          a(href='/') Domů
        li
          a Debug
        li
          a(href='/debug/i2c') i2c
      hr
    div.row
      div.col-lg-12
        div.box
          div.box-header
            h2
              i.fa.fa-align-justify
              span.break
              | i2c PWM Driver
            div.box-icon
          div.box-content            
            table.table.table-bordered.table-striped.bootstrap-datatable.datatable.dataTable
              thead
                tr(role='row')
                  th(style='width: 100px;') Kanál
                  th Hodnota
              tbody
                - var i = 0
                while i < 16
                  tr
                    td= i
                    td
                      label.switch.switch-success
                        input.switch-input(type='checkbox', checked)
                        span.switch-label(data-on='ON' data-off='OFF')
                        span.switch-handle
                  - i++